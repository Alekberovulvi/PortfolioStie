<h1>Testimonals</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Img</th>
        <th>Name</th>
        <th>Titile</th>
        <th>Icon</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model.TestimonialsEdits)
    { 
        <tr>

            <td>@item.Id</td>
            <td>
                <img src="~/assets/img/testimonials/@item.Img" alt="@item.Img" style="max-width:100px;"></img>
            </td>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Icon</td>
            <td>@item.Description</td>
            <td><a asp-action="Pupdate" asp-route-id="@item.Id" class="btn btn-success"><i class="fa-solid fa-pen-nib"></i>Update</a></td>
            <td><a asp-action="Pdelete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-pen-nib"></i>Delete</a></td>
        </tr>

    }
</table>
<a asp-controller="Expression" asp-action="Pcreate" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>