@model HomeVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Expression</h1>

<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>

            <tr>
        <th>@Model.Testimonials.Id</th>
        <th>@Model.Testimonials.Title</th>
                <td><a asp-action="Update" asp-route-id="@Model.Testimonials.Id" class="btn btn-success"><i class="fa-solid fa-pen-nib"></i> Update</a></td>
                <td><a asp-action="Delete" asp-route-id="@Model.Testimonials.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a></td>
            </tr>
</table>
<a asp-controller="Expression" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>


<br />
<br />
