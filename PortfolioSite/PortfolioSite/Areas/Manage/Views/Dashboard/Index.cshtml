@model HomeVM

@{
    ViewData["Title"] = "Index";
}



<table class="table table-bordered">

    <td><a asp-controller="Dashboard" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a></td>


    <tr>

        <th>Id</th>
        <th>Title</th>
        <th>Description</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>


    <tr>
        <th>@Model.Favorite.Id</th>
        <td>@Model.Favorite.Title</td>
        <td>@Model.Favorite.Description</td>
        <td><a asp-action="Update" asp-route-id="@Model.Favorite.Id" class="btn btn-success"><i class="fa-solid fa-pen-nib"></i> Update</a></td>
        <td>
            <a asp-action="Delete" asp-route-id="@Model.Favorite.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
        </td>
    </tr>

</table>
