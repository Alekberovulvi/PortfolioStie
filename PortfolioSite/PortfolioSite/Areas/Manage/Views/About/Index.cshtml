@model HomeVM

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Haqqimda</h1>
<br/>

<table class="table table-bordered">
   <thead>
       <tr>
            <th>
                @Html.DisplayNameFor(model=>model.About.Id)
            </th>
           <th>
               @Html.DisplayNameFor(model=>model.About.Title)
           </th>
            <th>
                @Html.DisplayNameFor(model=>model.About.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.About.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.About.Img)
            </th>
            <th>Update</th>
            <th>Delete</th>
       </tr>
   </thead>
    <tr>
        <th>@Model.About.Id</th>
        <td>@Model.About.Title</td>
        <td>@Model.About.Description</td>
        <td>@Model.About.Name</td>
            <th>
            <img src="~/assets/img/@Model.About.Img" alt="@Model.About.Img" style="max-width:100px;"></img>
            </th>
        <td><a asp-action="Update" asp-route-id="@Model.About.Id" class="btn btn-success"><i class="fa-solid fa-pen-nib"></i> Update</a></td>

        <td>
            <a asp-action="Delete" asp-route-id="@Model.About.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i> Delete</a>
        </td>
       </tr>
</table>
<a asp-controller="About"  asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Create</a>

